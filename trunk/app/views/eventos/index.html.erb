<h1>Listing eventos</h1>

<table>
  <tr>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Data hora</th>
    <th>Descricao</th>
    <th>Foto</th>
    <th>Evento tipo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @eventos.each do |evento| %>
  <tr>
    <td><%= evento.latitude %></td>
    <td><%= evento.longitude %></td>
    <td><%= evento.data_hora %></td>
    <td><%= evento.descricao %></td>
    <td><%= evento.foto %></td>
    <td><%= evento.evento_tipo_id %></td>
    <td><%= link_to 'Show', evento %></td>
    <td><%= link_to 'Edit', edit_evento_path(evento) %></td>
    <td><%= link_to 'Destroy', evento, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

